
<body class="bg-gray-200 min-h-screen h-auto">
  <div id="posts" class="w-full max-w-7xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="flex flex-col items-center mb-10">
      <h1 class="text-4xl font-semibold text-gray-800 text-center p-10">Community Posts</h1>
      <%= link_to "New Post", new_post_path,
          class: "bg-blue-600 hover:bg-blue-700 text-white px-5 py-2.5 rounded-lg shadow-sm transition" %>
    </div>

    <!-- Posts -->
    <div class="space-y-4">
      <%= render @posts %>
    </div>
    <!-- Infinite Scroll Trigger -->
    <% if @posts.next_page %>
      <div
        data-controller="infinite-scroll"
        data-infinite-scroll-url-value="<%= posts_path(page: @posts.next_page) %>">
        <div class="text-center text-gray-500 py-6">Weitere Posts werden geladenâ€¦</div>
      </div>
    <% end %>
  </div>
</body>

