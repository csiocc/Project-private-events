<main class="relative flex flex-col items-center w-full bg-gray-100 min-h-screen py-12 px-4 sm:px-8">

  <!-- Innerer Container -->
  <div class="w-full max-w-6xl mx-auto space-y-12">
    <!-- Post Header -->
    <div class="bg-white shadow-md rounded-2xl border border-gray-100 p-10">
      <h1 class="text-4xl sm:text-5xl font-semibold text-gray-900 mb-6 leading-tight break-words">
        <%= @post.title %>
      </h1>

      <div class="flex flex-wrap items-center text-sm sm:text-base text-gray-500 mb-8 gap-x-3 gap-y-2">
        <% username = @post.user.name.presence || "Unknown" %>
        <div class="flex items-center space-x-2">
          <div class="flex items-center justify-center w-10 h-10 rounded-full bg-gray-200 text-gray-700 font-medium">
            <%= username[0].upcase %>
          </div>
          <span class="font-medium text-gray-800"><%= username %></span>
        </div>
        <span>•</span>
        <span><%= time_ago_in_words(@post.created_at) %> ago</span>
        <span>•</span>
        <span><%= pluralize(@post.comments.count, "Comment") %></span>
      </div>

      <!-- Post Body -->
      <div class="prose prose-blue max-w-none text-gray-800 leading-relaxed text-lg sm:text-xl">
        <%= simple_format(@post.body) %>
      </div>
    </div>

    <!-- Kommentarbereich -->
    <%= render "comments/section", post: @post %>
  </div>

</main>
