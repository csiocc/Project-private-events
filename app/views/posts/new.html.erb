<div class="max-w-7xl w-full mx-auto h-screen mt-10 px-6 self-center">
  <div class="bg-white rounded-2xl shadow-lg p-10 border border-gray-100">
    <h1 class="text-4xl font-semibold text-gray-800 mb-8">Create a New Post</h1>

    <%= form_with(model: @post, local: true, class: "space-y-8") do |form| %>

      <% if @post.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-5 py-4 rounded-xl">
          <h2 class="font-semibold mb-2"><%= pluralize(@post.errors.count, "error") %> prevented this post from being saved:</h2>
          <ul class="list-disc list-inside">
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :title, class: "block text-lg font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title,
            class: "w-full text-lg rounded-xl border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200 transition shadow-sm px-4 py-2",
            placeholder: "Enter a clear, descriptive title..." %>
      </div>

      <div>
        <%= form.label :body, class: "block text-lg font-medium text-gray-700 mb-2" %>
        <%= form.text_area :body,
            rows: 12,
            class: "w-full text-base rounded-xl border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200 transition shadow-sm px-4 py-3 leading-relaxed",
            placeholder: "Write your post content here..." %>
      </div>

      <div class="flex items-center justify-between pt-6">
        <%= link_to "Cancel", posts_path,
            class: "text-gray-500 hover:text-gray-700 text-base transition" %>

        <%= form.submit "Publish Post",
            class: "bg-blue-600 hover:bg-blue-700 text-white text-base font-medium px-6 py-3 rounded-xl shadow-sm transition" %>
      </div>

    <% end %>
  </div>
</div>
