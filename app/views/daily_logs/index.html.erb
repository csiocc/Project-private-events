<%= render "shared/profil_header" %>

<h2 class="font-bold text-2xl mb-6">Deine Log-Tage</h2>

<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
  <div>
    <h3 class="font-semibold text-xl mb-2 text-yellow-700">Ungelesene Log-Tage</h3>
    <ul class="space-y-2">
      <% @unread_dates.each do |date| %>
        <li>
          <%= link_to date, daily_log_path(date),
              class: "block px-4 py-2 rounded bg-yellow-50 border border-yellow-200 text-yellow-800 hover:bg-yellow-200 hover:text-yellow-900 shadow transition" %>
        </li>
      <% end %>
      <% if @unread_dates.empty? %>
        <li class="text-gray-400 italic">Du hast alle Logs gelesen!</li>
      <% end %>
    </ul>
  </div>

  <div>
    <h3 class="font-semibold text-xl mb-2 text-gray-700">Gelesene Log-Tage</h3>
    <ul class="space-y-2">
      <% @read_dates.each do |date| %>
        <li>
          <%= link_to date, daily_log_path(date),
              class: "block px-4 py-2 rounded bg-gray-100 border border-gray-300 text-gray-700 hover:bg-gray-200 hover:text-gray-900 shadow transition" %>
        </li>
      <% end %>
      <% if @read_dates.empty? %>
        <li class="text-gray-400 italic">Noch keine gelesenen Tage.</li>
      <% end %>
    </ul>
  </div>
</div>

