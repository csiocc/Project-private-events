<% content_for :title, "News feeds" %>

<div class="w-full h-auto bg-gray-200">
  <div class="relative flex items-center m-5">
    <h1 class="font-bold text-4xl mx-auto">News feed</h1>
   
  </div>

  <div id="news_feeds" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @news_feeds %>
      <% @news_feeds.each do |news_feed| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render news_feed %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No news feeds found.</p>
    <% end %>
  </div>
</div>
