<%= form_with(model: [commentable, Comment.new], local: true, class: "space-y-4") do |form| %>
  <%= form.hidden_field :parent_id, value: parent&.id %>

  <%= form.text_area :body,
      rows: 3,
      class: "w-full rounded-xl border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200 transition shadow-sm px-3 py-2",
      placeholder: parent.present? ? "Write a reply..." : "Add a comment..." %>

  <div class="flex justify-end">
    <%= form.submit parent.present? ? "Reply" : "Post Comment",
        class: "bg-blue-600 hover:bg-blue-700 text-white px-5 py-2.5 rounded-lg shadow-sm font-medium transition" %>
  </div>
<% end %>