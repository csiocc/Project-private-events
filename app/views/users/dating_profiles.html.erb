<div class="min-h-[95vh] bg-pink-50 px-4 py-8">
  <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-lg p-8">
    <h1 class="text-3xl font-bold text-pink-700 mb-8 text-center">Dating-Profile</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-7">
      <% @users.each do |user| %>
        <div class="bg-pink-100 rounded-xl p-6 shadow border border-pink-200 flex flex-col">
          <div class="flex items-center mb-4">
            <%# Avatar anzeigen, falls vorhanden %>
            <% if user.avatar.attached? %>
              <%= image_tag user.avatar.variant(resize_to_limit: [80, 80]), class: "rounded-full mr-4" %>
            <% else %>
              <div class="h-20 w-20 bg-pink-200 rounded-full flex items-center justify-center text-3xl font-bold text-pink-600 mr-4">
                <%= user.name.first.upcase %>
              </div>
            <% end %>
            <div>
              <h2 class="text-xl font-semibold text-pink-800"><%= user.name %></h2>
              <p class="text-gray-500 text-sm"><%= user.age %> Jahre, <%= user.location %></p>
            </div>
          </div>
          <p class="text-gray-700 mb-3"><%= truncate(user.dating_bio, length: 120) %></p>
          <div class="mt-auto flex justify-end">
            <%= link_to "Profil ansehen", dating_profile_user_path(user),
                  class: "bg-pink-600 hover:bg-pink-700 text-white px-4 py-1 rounded font-medium text-sm transition" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>