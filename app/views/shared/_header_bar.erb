<div class="bg-white shadow-md border-b border-black w-full">
  <div class="max-w-7xl mx-auto px-4 py-3 flex items-center justify-between">
    <!-- Suche links -->
    <div class="flex items-center w-1/3 min-w-[170px]">
      <%= render 'shared/logo' %>
      <div class="ml-3 w-full max-w-l">
        <div class="flex items-center bg-gray-100 rounded-full px-3 py-1 w-full focus-within:ring-2 focus-within:ring-blue-400">
          <i class="bx bx-search text-gray-500 text-xl"></i>
          <input type="text" placeholder="Suche..." class="flex-1 bg-transparent border-none focus:outline-none px-3" />
        </div>
      </div>
    </div>
    
    <!-- Men端 rechts -->
    <div class="hidden md:flex items-center space-x-6">
      <%= link_to 'Home', root_path, class: "font-bold text-gray-800 hover:text-gray-600" %>
      <%= link_to 'Posts', posts_path, class: "text-gray-800 hover:text-gray-600" %>
      <%= link_to 'Events', events_path, class: "text-gray-800 hover:text-gray-600" %>
      <%= link_to 'Dating', swiper_users_path, class: "text-gray-800 hover:text-gray-600" %>
      <% if user_signed_in? %>
        <%= link_to "Users", users_path(@user), class: "text-gray-800 hover:text-gray-600" %>
        <%= link_to 'Profil', edit_user_registration_path %>
        <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: "text-gray-800 hover:text-gray-600" %>
      <% else %>
        <%= link_to 'Login', new_user_session_path, class: "text-gray-800 hover:text-gray-600" %>
        <%= link_to 'Sign Up', new_user_registration_path, class: "text-gray-800 hover:text-gray-600" %>
      <% end %>
    </div>

    <!-- Hamburger-Men端 Button (mobil) -->
    <div class="md:hidden flex items-center">
      <button id="menu-toggle" class="text-gray-800 hover:text-gray-600 focus:outline-none">
        <!-- Hamburger Icon (FontAwesome oder SVG) -->
        <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Ausfahrbares Men端 f端r Mobil -->
  <div id="mobile-menu" class="md:hidden hidden px-4 pb-4">
    <div class="flex flex-col space-y-2">
      <%= link_to 'Home', root_path, class: "font-bold text-gray-800 hover:text-gray-600" %>
      <%= link_to 'Posts', posts_path, class: "text-gray-800 hover:text-gray-600" %>
      <%= link_to 'Events', events_path, class: "text-gray-800 hover:text-gray-600" %>
      <%= link_to 'Dating', swiper_users_path, class: "text-gray-800 hover:text-gray-600" %>
      <% if user_signed_in? %>
        <%= link_to "Users", users_path(@user), class: "text-gray-800 hover:text-gray-600" %>
        <%= link_to 'Profil', edit_user_registration_path %>
        <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: "text-gray-800 hover:text-gray-600" %>
      <% else %>
        <%= link_to 'Login', new_user_session_path, class: "text-gray-800 hover:text-gray-600" %>
        <%= link_to 'Sign Up', new_user_registration_path, class: "text-gray-800 hover:text-gray-600" %>
      <% end %>
    </div>
  </div>
</div>