<div class="w-screen h-auto bg-white p-4 shadow-md border-solid border-1">
  <div class="flex items-centerjustify-between mx-auto">

    <!-- Navigation links(suchleiste) -->
    <div class="flex-shrink-0">
      <%= render 'shared/logo' %>
    </div>

    <div class="flex-1 justify-start min-w-0">
      <div class="search-bar">
        <div class="flex items-center bg-gray-100 rounded-full px-3 py-1 w-full max-w-xs focus-within:ring-2 focus-within:ring-blue-400">
          <i class="bx bx-search text-gray-500 text-xl"></i>
            <input type="text" placeholder="Suche..." class="flex-1 bg-transparent border-none focus:outline-none px-3" />
        </div>
      </div>
    </div>

    <!-- Message middle -->
    <div class="absolute left-1/2 transform -translate-x-1/2 text-center">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
    </div>

    <!-- Navigation rechts -->
    <div class="flex items-center space-x-6">
      <div class="text-2xl font-bold text-gray-800">
        <i class="bx bx-menu"></i> Menu
      </div>
      <div class="space-x-4">
        <%= link_to 'Home', root_path, class: "text-gray-800 hover:text-gray-600" %>
        <%= link_to 'Posts', posts_path, class: "text-gray-800 hover:text-gray-600" %>
        <%= link_to 'Events', events_path, class: "text-gray-800 hover:text-gray-600" %>
        <% if user_signed_in? %>
          <%= link_to 'Profil', edit_user_registration_path%>
          <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: "text-gray-800 hover:text-gray-600" %>
        <% else %>
          <%= link_to 'Login', new_user_session_path, class: "text-gray-800 hover:text-gray-600" %>
          <%= link_to 'Sign Up', new_user_registration_path, class: "text-gray-800 hover:text-gray-600" %>
        <% end %>
      </div>
    </div>
  </div>
</div>  

  