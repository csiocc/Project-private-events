<!-- Container -->
<div class="min-h-[95vh] bg-gray-200 grid place-items-center px-4">
  <div class="w-full max-w-4xl bg-white rounded-2xl shadow-lg p-10">
    <div class="mb-6 text-center">
      <%= render("shared/logo") rescue "" %>
      <h1 class="mt-4 text-3xl font-bold tracking-tight text-gray-800">Event bearbeiten</h1>
      <p class="text-gray-600 text-sm">Bearbeite die Details deines privaten Events und lade Freunde ein!</p>
    </div>

    <% if @event.errors.any? %>
      <div class="mb-6 rounded-lg border border-red-200 bg-red-50 p-4 text-sm text-red-700">
        <p class="font-semibold mb-2">
          <%= pluralize(@event.errors.count, "Fehler") %> haben die Speicherung verhindert:
        </p>
        <ul class="list-disc list-inside">
          <% @event.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: @event, local: true, class: "grid grid-cols-1 md:grid-cols-3 gap-10 items-start") do |f| %>
      <!-- Event Details -->
      <div class="md:col-span-2 space-y-6">
        <div>
          <%= f.label :title, "Titel", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :title,
              class: "w-full rounded-lg border border-gray-300 px-4 py-2 text-gray-800 focus:ring-2 focus:ring-blue-400 focus:outline-none",
              placeholder: "Event Titel" %>
        </div>

        <div>
          <%= f.label :description, "Beschreibung", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_area :description,
              rows: 5,
              class: "w-full rounded-lg border border-gray-300 px-4 py-2 text-gray-800 focus:ring-2 focus:ring-blue-400 focus:outline-none",
              placeholder: "Beschreibe dein Event..." %>
        </div>

        <div>
          <%= f.label :location, "Ort", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :location,
              class: "w-full rounded-lg border border-gray-300 px-4 py-2 text-gray-800 focus:ring-2 focus:ring-blue-400 focus:outline-none",
              placeholder: "Wo findet es statt?" %>
        </div>

        <div>
          <%= f.label :date, "Datum", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :date,
              class: "w-full rounded-lg border border-gray-300 px-4 py-2 text-gray-800 focus:ring-2 focus:ring-blue-400 focus:outline-none" %>
        </div>

        <div>
          <%= f.label :event_type, "Event-Typ", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :event_type, Event.event_types.keys.map { |type| [type.titleize, type] },
              {}, class: "w-full rounded-lg border border-gray-300 px-4 py-2 text-gray-800 focus:ring-2 focus:ring-blue-400 focus:outline-none" %>
        </div>
      </div>

      <!-- Gäste-Einladung -->
      <div class="md:col-span-1 space-y-6" data-controller="user-search">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Gäste einladen</h2>
        <div>
          <label for="user_search" class="block text-sm font-medium text-gray-700 mb-1">Suche Nutzer zum Einladen</label>
          <input id="user_search" type="text" placeholder="Name oder E-Mail..."
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none"
            autocomplete="off"
            data-user-search-target="input">

          <!-- Gefundene Nutzer-Liste -->
          <ul data-user-search-target="results" class="mt-2 space-y-1"></ul>
          <!-- Hidden inputs for invited user IDs -->
          <div data-user-search-target="invitesFields"></div>
        </div>

        <!-- Eingeladene Nutzer-Liste -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Eingeladene Nutzer</label>
          <ul data-user-search-target="invited" class="space-y-2"></ul>
        </div>
      </div>

      <div class="md:col-span-3 flex items-center justify-between pt-8">
        <%= button_to "Abbrechen", event_path(@event), mehtod: :get, class: "bg-blue-600 hover:bg-blue-700 text-white text-base font-medium px-6 py-3 rounded-xl shadow-sm transition" %>
        <%= f.submit "Änderungen speichern", class: "bg-blue-600 hover:bg-blue-700 text-white text-base font-medium px-6 py-3 rounded-xl shadow-sm transition" %>
      </div>
    <% end %>
    <!-- Delete Button separat darunter -->
    <div class="mt-6">
      <%= button_to "Event löschen", event_path(@event), method: :delete, data: { confirm: "Willst du dieses Event wirklich löschen?" }, class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-xl font-semibold" %>
    </div>
  </div>
</div>